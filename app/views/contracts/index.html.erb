<p id="notice"><%= notice %></p>

<h1>Contracts</h1>

<table>
  <thead>
    <tr>
      <th>Place</th>
      <th>Name</th>
      <th>Document</th>
      <th>Age</th>
      <th>Marital status</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Service to hire</th>
      <th>Career</th>
      <th>Academic degree</th>
      <th>Amount pay</th>
      <th>Fractional payment</th>
      <th>Way to pay</th>
      <th>Type of service</th>
      <th>Discover</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.place %></td>
        <td><%= contract.name %></td>
        <td><%= contract.document_id %></td>
        <td><%= contract.age %></td>
        <td><%= contract.marital_status %></td>
        <td><%= contract.phone %></td>
        <td><%= contract.email %></td>
        <td><%= contract.service_to_hire %></td>
        <td><%= contract.career %></td>
        <td><%= contract.academic_degree %></td>
        <td><%= contract.amount_pay %></td>
        <td><%= contract.fractional_payment %></td>
        <td><%= contract.way_to_pay %></td>
        <td><%= contract.type_of_service %></td>
        <td><%= contract.discover %></td>
        <td><%= link_to 'Show', contract %></td>
        <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
        <td><%= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

