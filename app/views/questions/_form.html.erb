<%= form_with(model: question, local: true) do |form| %>
  <% if question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
        <% question.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label 'País' %>
    <%= form.text_field :country,  class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label 'Nombre completo' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label 'Teléfono' %>
    <%= form.number_field :phone, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label 'Carrera'%>
    <%= form.text_field :career, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label 'Grado académico' %>
    <%= form.text_field :academy_degree, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label 'Universidad' %>
    <%= form.text_field :university, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label 'Escribe tu duda aquí'%>
    <%= form.text_area :body, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Enviar', class: 'btn-info' %>
  </div>
<% end %>
